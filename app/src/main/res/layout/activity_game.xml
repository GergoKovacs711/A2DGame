<RelativeLayout
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view
        android:id="@+id/game_view"
        class="com.gergo.kovacs.a2dgame.SurficeView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:id="@+id/coin_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/counter_text_size"
        android:text="100"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/score_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:textSize="@dimen/counter_text_size"
        android:text="100"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/counter_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/placeholder1_drawable"
        android:layout_alignTop="@+id/coin_counter"
        android:layout_alignBottom="@+id/coin_counter"
        android:layout_toLeftOf="@+id/coin_counter"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/score_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/score_counter"
        android:layout_alignBottom="@+id/score_counter"
        android:layout_alignEnd="@id/score_counter"
        android:layout_marginRight="60dp"
        android:src="@drawable/placeholder1_drawable"
        android:layout_marginTop="2dp"
        android:visibility="invisible" />

</RelativeLayout>